<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Boards</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12">
      <table class="table mb-0">
        <thead>
          <tr>
            <th scope="col">Game Name</th>
            <th scope="col">Created</th>
            <th scope="col">Updated</th>
            <th scope="col">Created By</th>
          </tr>
        </thead>
        <tbody>
          <% @boards.each do |board| %>
            <tr>
              <td><%= link_to board.game_name, board %></td>
              <td><%= board.created_at %></td>
              <td><%= board.updated_at %></td>
              <td>
              <% created_by_player = Player.find_by(id: board.white_player_id) %> 
              <% if created_by_player %>
                <%= created_by_player.nickname %>
              <% else %>
                Unknown Player
              <% end %>
            </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-12 mt-3">
      <%= button_to "New board", { :action => "new" }, :method => :get, :class => "btn btn-success" %>
    </div>
  </div>
</div>