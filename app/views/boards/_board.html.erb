<div id="<%= dom_id board %>">
  <p>
    <strong>History string:</strong>
    <%= board.history_string %>
  </p>

  <p>
    <strong>Game name:</strong>
    <%= board.game_name %>
  </p>

<%= form_with(model: board) do |model| %>
  <% if board.errors.any? %>
  <div style="color: red">
    <h2><%= pluralize(board.errors.count, "error") %> prohibited this board from being saved:</h2>
    <ul>
      <% board.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
  <% else %>
  <% if flash[:alert].present? %>
    <div style="color: red">
      <%= flash[:alert] %>
    </div>
  <% end %>
<% end %>

<div class="actions">
  <%= model.label :new_move, style: "display: block" %>
  <%= model.text_field :new_move, style: "display: block" %>
  <%= model.submit "Add Move", class: "btn-secondary" %>
</div>
<% end %>

</div>
