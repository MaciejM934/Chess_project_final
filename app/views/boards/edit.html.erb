<h1>Editing board</h1>

<%= render "form", board: @board %>

<br>

<%= form_with url: validate_move_path, method: :post do |form| %>
  <%= form.text_field :move, placeholder: 'Enter your move' %>
  <%= form.submit 'Submit' %>
<% end %>

<div>
  <%= link_to "Show this board", @board %> |
  <%= link_to "Back to boards", boards_path %>
</div>


